@model IEnumerable<AciSozluk.Models.Comment>

@{
    ViewData["Title"] = "Anasayfa";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Yeni oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AciSozlukUserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AciSozlukUserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.Id)
            </td>
